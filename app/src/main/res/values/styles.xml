<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputLayout.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">55dp</item>
    </style>

    <style name="Button" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="strokeColor">@android:color/darker_gray</item>
        <item name="android:textSize">16dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginLeft">25dp</item>
    </style>

    <style name="Widget.courseProject.CardView.Authorization" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">500dp</item>
        <item name="android:layout_height">460dp</item>
        <item name="android:layout_gravity">center</item>

    </style>
    <style name="Widget.courseProject.TextView.Header1" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.courseProject.TextButton.Authorization" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">200dp</item>
    </style>

    <style name="Widget.courseProject.ImageButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="shapeAppearanceOverlay">@style/Widget.courseProject.ShapeAppearanceOverlay.ImageButton.Rounded</item>
    </style>

    <style name="Widget.courseProject.ShapeAppearanceOverlay.ImageButton.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

</resources>